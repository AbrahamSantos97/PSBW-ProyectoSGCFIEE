@model SGCFIEE.Models.CompletoAlumnos
@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Home/Principal.cshtml";
    var y = (IEnumerable<TipoPeriodo>)ViewData["periodo"];
    var z = (IEnumerable< TipoEventos>)ViewData["tipoevento"];
    var cali = (IEnumerable<CalificacionAlumno>)ViewData["calificacion"];
    var evento = (IEnumerable<AlumnoEvento>)ViewData["evento"];
    var movilidad = (IEnumerable<AlumnoMovilidad>)ViewData["movilidad"];
    var pafi = (IEnumerable<AlumnoPafi>)ViewData["pafi"];
    var examen = (IEnumerable<AlumnoExamen>)ViewData["examen"];

}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green">

                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li id="tb1" class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Información General</a></li>
                            <li id="tb2" class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">Información Académica</a></li>
                            <li id="tb3" class="nav-item"><a href="#tab3" class="nav-link" data-toggle="tab">Boleta</a></li>
                            <li id="tb4" class="nav-item"><a href="#tab4" class="nav-link" data-toggle="tab">Pafis</a></li>
                            <li id="tb5" class="nav-item"><a href="#tab5" class="nav-link" data-toggle="tab">Examen ingreso e interno</a></li>
                            <li id="tb7" class="nav-item"><a href="#tab6" class="nav-link" data-toggle="tab">Participación en Eventos</a></li>
                            <li id="tb6" class="nav-item"><a href="#tab7" class="nav-link" data-toggle="tab">Información Movilidad</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="reporte">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <div class="row">
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Nombre</strong>
                                                <br>
                                                <p id="Nombre" class="text-muted">@Html.DisplayFor(model => model.Nombre)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>A. Paterno</strong>
                                                <br>
                                                <p id="A_paterno" class="text-muted">@Html.DisplayFor(model => model.ApellidoPaterno)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>A. Materno</strong>
                                                <br>
                                                <p id="A_materno" class="text-muted">@Html.DisplayFor(model => model.ApellidoMaterno)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Correo</strong>
                                                <br>
                                                <p id="email" class="text-muted">@Html.DisplayFor(model => model.Correo)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Fecha de Nacimiento</strong>
                                                <br>
                                                <p id="fecha" class="date-muted">@Html.DisplayFor(model => model.FechaNacimiento)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Nacionalidad</strong>
                                                <br>
                                                <p id="Nacionalidad" class="text-muted">@Html.DisplayFor(model => model.Nacionalidad)</p>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Estado Civil</strong>
                                                <br>
                                                <p id="Estadoc" class="text-muted">@Html.DisplayFor(model => model.EstadoCivil)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>CURP</strong>
                                                <br>
                                                <p id="Curp" class="text-muted">@Html.DisplayFor(model => model.Curp)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Domicilio</strong>
                                                <br>
                                                <p id="Domicilio" class="text-muted">@Html.DisplayFor(model => model.Municipio)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Teléfono</strong>
                                                <br>
                                                <p id="Tel" class="text-muted">@Html.DisplayFor(model => model.Telefono)</p>
                                                <br>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab2">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <div class="row">
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Matricula</strong>
                                                <br>
                                                <p id="Matricula" class="text-muted">@Html.DisplayFor(model => model.Matricula)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Correo institucional</strong>
                                                <br>
                                                <p id="emaili" class="text-muted">@Html.DisplayFor(model => model.CorreoInstitucional)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Año de ingreso</strong>
                                                <br>
                                                <p id="anioi" class="text-muted">@Html.DisplayFor(model => model.AnioIngreso)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Modalidad</strong>
                                                <br>
                                                <p id="Modalidad" class="text-muted">@Html.DisplayFor(model => model.Modalidad)</p>
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6">
                                                <strong>Programa Educativo</strong>
                                                <br>
                                                <p id="Programa" class="text-muted">@Html.DisplayFor(model => model.Nombrepro)</p>
                                                <br>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab3">
                            <div id="calialumno">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">

                                        <div class="card-body " id="bar-parent2">
                                            <a href="/EstudiantesInformacion/CrearCali?idalum=@Model.IdDatosPersonales" class="btn btn-success btn-sm m-b-10"> 
                                                Agregar Calificacion 
                                            </a>
                                            <div class="col-md-3 col-sm-3">
                                                <label>Seleccione un periodo</label>
                                                <select id="selectPeriodo" class="form-control">
                                                    @foreach (var item in y)
                                                    {
                                                        <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre) </option>
                                                    }
                                                </select> <br /> <br />
                                            </div>
                                            <div class="row">
                                                @foreach (var item in cali)
                                                {
                                                <div class="col-sm-4" name="calificacion-@item.IdPeriodo" >
                                                    <div class="panel">
                                                        <header class="panel-heading panel-heading-blue">
                                                            @Html.DisplayFor(modelItem => item.Nombreexpe)
                                                        </header>
                                                        <div class="panel-body" style="background-color:#4CB36E;">
                                                            <p style="color: white;" id="">NRC:        @Html.DisplayFor(modelItem => item.Nrc)</p>
                                                            <p style="color:white;">Academico:         @Html.DisplayFor(modelItem => item.Nombreaca)  </p>
                                                            <p style="color:white;">Calificacion:      @Html.DisplayFor(modelItem => item.Calificacion)</p>
                                                            <p style="color:white;">Tipo calificacion: @Html.DisplayFor(modelItem => item.tipocali)</p>
                                                            <p style="color:white;">Creditos:          @Html.DisplayFor(modelItem => item.creditos)</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                }
                                                

                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab4" >
                            <div id="pafialumno">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="col-md-3 col-sm-3">
                                            <label>Seleccione un periodo</label>
                                            <select id="PeriodoPafi" class="form-control">
                                                @foreach (var item in y)
                                                {
                                                    <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre) </option>
                                                }
                                            </select> <br /> <br />
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="tablainfopafi">
                                                <thead>
                                                    <tr>
                                                        <th style="display: none"></th>
                                                        <th class="center">Nombre del pafi</th>
                                                        <th class="center">Maestro</th>
                                                        <th class="center">Horario</th>
                                                        <th class="center">Salon</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in pafi)
                                                    {
                                                        <tr class="odd gradeX" name="pafi-@item.idperiodo">
                                                            <td style="display:none">id</td>
                                                            <td>@Html.DisplayFor(modelItem => item.nombrepafi)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.acapafi)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.horario)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.salon)</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab5">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <div class="card-head">
                                            <header>Examen Ingreso</header>
                                        </div> <br>
                                        <div class="row">
                                            @foreach (var item in examen)
                                            {
                                                @if (item.tipoexa == 1)
                                                {


                                                    <div class="col-md-6 col-6 b-r">
                                                        <strong>@Html.DisplayFor(modelItem => item.rubroexamen)</strong>
                                                        <p id="Comprension" class="text-muted">@Html.DisplayFor(modelItem => item.calificacion)</p>
                                                        <br> <br>
                                                    </div>

                                                }

                                            }
                                        </div><br> <br>
                                        <div class="card-head">
                                            <header>Examen interno</header>
                                        </div> <br>
                                               <div class="row">
                                                   @foreach (var item2 in examen)
                                                   {
                                                       @if (item2.tipoexa == 2)
                                                       {


                                                           <div class="col-md-6 col-6 b-r">
                                                               <strong>@Html.DisplayFor(modelItem => item2.rubroexamen)</strong>
                                                               <p id="Pensamientom" class="text-muted">@Html.DisplayFor(modelItem => item2.calificacion)</p>
                                                               <br>
                                                           </div>

                                                       }
                                                   }
                                               </div>

                                        </div>

                                        </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab6">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-body " id="bar-parent2">
                                        <br> <br>
                                        <div class="row">
                                            @foreach (var item in evento)
                                            {
                                            <div class="col-md-3 col-6 b-r">
                                                <strong>@Html.DisplayFor(modelItem => item.tipoeve)</strong> <br> <br>
                                                <p id="" class="text-muted">@Html.DisplayFor(modelItem => item.nombreeve)</p> <br>
                                                <p id="" class="text-muted">@Html.DisplayFor(modelItem => item.fecha)</p> <br>
                                            </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab7">
                            <div id="movialumno">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">

                                        <div class="card-body " id="bar-parent2">
                                            <div class="col-md-3 col-sm-3">

                                                <label>Seleccione un periodo</label>
                                                <select id="PeriodoMovi" class="form-control">
                                                    @foreach (var item in y)
                                                    {
                                                        <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre) </option>
                                                    }
                                                </select>
                                            </div> <br> <br>
                                                        <div class="row">
                                                            @foreach (var item in movilidad)
                                                            {
                                                                <div class="col-md-6 col-6 b-r" name="movilidad-@item.idperiodo">
                                                                    <strong>Información</strong> <br> <br>
                                                                    <p class="text-muted">Tipo movilidad: Naciona o Internacionall</p>
                                                                    <p id="" class="text-muted">Pais destino:   @Html.DisplayFor(modelItem => item.paisdestino) </p>
                                                                    <p id="" class="text-muted">Entidad destino:    @Html.DisplayFor(modelItem => item.entidaddestino)</p>
                                                                    <p id="" class="text-muted">Escuela destino:    @Html.DisplayFor(modelItem => item.escueladestino)</p>
                                                                    <p id="" class="text-muted">TIempo permanencia: @Html.DisplayFor(modelItem => item.tiempoperma)</p>
                                                                </div>
                                                            }


                                                        </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab8">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <div class="row">
                                            <div class="col-md-3 col-6 b-r">
                                                <strong></strong>
                                                <p id="Matematicas" class="text-muted"></p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="profile-content">
                            <a asp-controller="EstudiantesInformacion" asp-action="Index"  class="btn btn-success btn-sm m-b-10">
                                Regresar a tabla
                            </a>
                           
                        </div>
                        <div class="profile-content">
                            <a id="tablaPDF" class="btn btn-danger btn-xs eliminar" title="Reporte">
                                <i class="fa fa-trash-o "></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
