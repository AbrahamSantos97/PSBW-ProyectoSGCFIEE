@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Principal.cshtml";
    var x = (IEnumerable <CtProblemas>)ViewData["Problemas"];
    //var y = (IEnumerable <Academicos>)ViewData["Academicos"];
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-topline-green">
                <div class="card-head">
                    <header>BUZONES</header>
                    <div class="tools">
                        <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                        <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                        <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                    </div>
                </div>
                <div class="white-box">
                    <!-- Nav tabs -->
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Buzón Infraestructura</a></li>
                            <li class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">Buzón Desempeño Académico</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form>

                                            <div class="form-group">
                                                <div class="col-md-3 col-sm-3">
                                                    <header>Infraestructura</header> <br>
                                                    <label>Seleccione un tema</label>
                                                    <select class="form-control" required id="selectInf">
                                                        <option value="">Seleccionar...</option>
                                                        @foreach(var item in x)
                                                        {
                                                            <option value=@item.IdCtProblemas>@Html.DisplayFor(modelItem => item.NombreProblemas)</option>
                                                        }
                                                    </select>
                                                </div> <br> <br>
                                                <div class="col-md-6 col-sm-6">
                                                    <label>Describa la situacion a continuación</label>
                                                    <textarea class="form-control" rows="3" placeholder="Escriba ..." required id="situacionInf"></textarea> <br> <br>
                                                    <label>Agregue una sugerencia</label>
                                                    <textarea class="form-control" rows="3" placeholder="Escriba ..." required id="sugerenciaInf"></textarea>
                                                </div>
                                            </div>
                                        </form>
                                        <button id="btnInf" class="btn btn-success btn-sm m-b-10">
                                            Enviar
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab2">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form>
                                            <div class="form-group">
                                                <div class="col-md-3 col-sm-3">
                                                    <header>Desempeño académico</header> <br>
                                                    <label>Seleccione un academico</label>
                                                    <select class="form-control" id="selectDes">
                                                        <option value="">Seleccionar...</option>
                                                        @foreach (var item in x)
                                                        {
                                                            <option value=@item.IdCtProblemas>@Html.DisplayFor(modelItem => item.NombreProblemas)</option>
                                                        }
                                                    </select>
                                                </div><br> <br>
                                                <div class="col-md-6 col-sm-6">
                                                    <label>Describa la situacion a continuación</label>
                                                    <textarea class="form-control" rows="3" placeholder="Escriba ..." id="situacionDes"></textarea> <br> <br>
                                                    <label>Agregue una sugerencia </label>
                                                    <textarea class="form-control" rows="3" placeholder="Escriba ..." id="sugerenciaDes"></textarea>
                                                </div>
                                            </div>
                                        </form>
                                        <button id="btnDesem" class="btn btn-success btn-sm m-b-10">
                                            Enviar
                                        </button>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
