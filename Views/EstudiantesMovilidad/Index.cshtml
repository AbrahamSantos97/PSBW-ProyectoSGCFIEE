@model IEnumerable<SGCFIEE.Models.CtMovilidades>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>
<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green">
                    <div class="card-head">
                        <header>Movilidad</header>
                        <div class="tools">
                            <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                            <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                        </div>
                    </div>
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li id="tb1" class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Movilidad nacional</a></li>
                            <li id="tb2" class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">Movilidad internacional</a></li>
                        </ul>
                    </div>
                </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card-body ">
                                            <div class="row p-b-20">
                                                <div class="col-md-12 col-sm-12 col-12">
                                                    <div class="btn-group">
                                                        <a asp-controller="EstudiantesInformacion" asp-action="Crear" class="btn btn-success btn-sm m-b-10">
                                                            ConsultarEstado <i class="fa fa-plus"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example1">
                                                <thead>
                                                    <tr>
                                                        <th class="center"> País destino    </th>
                                                        <th class="center"> Entidad destino </th>
                                                        <th class="center"> Escuela participante </th>
                                                        <th class="center"> Tiempo de permanencia</th>
                                                        <th class="center">Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        @if (item.TipoMovilidades == 1)
                                                        {
                                                            <tr class="odd gradeX">
                                                                <td class="center">@Html.DisplayFor(modelItem => item.PaisDestinoMovilidad)</td>
                                                                <td class="center">@Html.DisplayFor(modelItem => item.EntidadDestinoMovilidad)</td>
                                                                <td class="center">@Html.DisplayFor(modelItem => item.EscuelaDestinoMovilidad)</td>
                                                                <td class="center">@Html.DisplayFor(modelItem => item.TiempoPermanenciaMovilidad)</td>
                                                                <td>
                                                                    <a asp-route-id="@item.IdCtMovilidades" asp-controller="EstudiantesMovilidad" asp-action="Editar" class="btn btn-primary btn-xs editar" title="Editar">
                                                                        <i class="fa fa-pencil"></i>
                                                                    </a>
                                                                    <a asp-route-id="@item.IdCtMovilidades" asp-controller="EstudiantesMovilidad" asp-action="Eliminar" class="btn btn-danger btn-xs eliminar" title="Eliminar">
                                                                        <i class="fa fa-trash-o "></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        }

                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab2">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card-body ">
                                        <div class="row p-b-20">
                                            <div class="col-md-12 col-sm-12 col-12">
                                                <div class="btn-group">
                                                    <a asp-controller="EstudiantesInformacion" asp-action="Crear" class="btn btn-success btn-sm m-b-10">
                                                        ConsultarEstado <i class="fa fa-plus"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example3">
                                            <thead>
                                                <tr>
                                                    <th class="center"> País destino    </th>
                                                    <th class="center"> Entidad destino </th>
                                                    <th class="center"> Escuela participante </th>
                                                    <th class="center"> Tiempo de permanencia</th>
                                                    <th class="center">Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    @if (item.TipoMovilidades == 2)
                                                    {
                                                        <tr class="odd gradeX">
                                                            <td class="center">@Html.DisplayFor(modelItem => item.PaisDestinoMovilidad)</td>
                                                            <td class="center">@Html.DisplayFor(modelItem => item.EntidadDestinoMovilidad)</td>
                                                            <td class="center">@Html.DisplayFor(modelItem => item.EscuelaDestinoMovilidad)</td>
                                                            <td class="center">@Html.DisplayFor(modelItem => item.TiempoPermanenciaMovilidad)</td>
                                                            <td>
                                                                <a asp-route-id="@item.IdCtMovilidades" asp-controller="EstudiantesMovilidad" asp-action="Editar" class="btn btn-primary btn-xs editar" title="Editar">
                                                                    <i class="fa fa-pencil"></i>
                                                                </a>
                                                                <a asp-route-id="@item.IdCtMovilidades" asp-controller="EstudiantesMovilidad" asp-action="Eliminar" class="btn btn-danger btn-xs eliminar" title="Eliminar">
                                                                    <i class="fa fa-trash-o "></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                
        </div>
    </div>
</div>
</div>
</html>
